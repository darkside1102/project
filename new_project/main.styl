.left-flex
	display flex
	justify-content flex-start
	flex-wrap wrap
	width 1000px
.bottom-flex
	display flex
	border-bottom 1px solid #dadfe0		
.container
	margin 15px 65px
.subject-info
	width 1000px
	&__responsible
		position relative
		border-bottom 1px solid #dadfe0
		&::before
			content "Ответственный"
			color rgb(65,131,215)
			font-size 11px
			position absolute
			z-index 1
			top 10px
			left 15px
	&__responsible-info
		width 1000px
		padding 30px 15px 10px
		border none
		background-image url('img/select-logo.png')
		background-repeat no-repeat
		background-position 98%
		appearance none
		border-right 1px solid #dadfe0
	&__provider
		position relative
		border-right 1px solid #dadfe0					
		&::before
			content "Поставщик"
			color rgb(65,131,215)
			font-size 11px
			position absolute
			z-index 1
			top 10px
			left 15px
	&__select-provider
		width 500px
		border none 
		appearance none
		background-image url('img/select-logo.png')
		background-repeat no-repeat
		background-position 96%				
	&__exposed
		position relative
		border-right 1px solid #dadfe0
		&::before
			content "Выставлен"	
			color rgb(65,131,215)
			font-size 11px
			position absolute
			z-index 1
			top 10px
			left 15px	 
	&__exposed-date
		width 235px
		border: none;
		padding: 30px 0 10px 15px;
	&__duedate
		position relative
		border-right 1px solid #dadfe0
		&::before
			content "Срок оплаты"	
			color rgb(65,131,215)
			font-size 11px
			position absolute
			z-index 1
			top 10px
			left 15px		
	&__duedate-date
		width 235px
		border none
		padding 30px 0 10px 15px
.subject
	width 100%
	display flex
	justify-content flex-start
	border-bottom 1px solid #dadfe0
	
	&__calculation
		width 15%
		position relative
		border-right 1px solid #dadfe0
		&::before
			content "Расчет НДС"	
			color rgb(65,131,215)
			font-size 11px
			position absolute
			z-index 1
			top 10px
			left 15px	
	&__сalculation-summ
		width 100%
		padding 30px 15px 10px 
		appearance none
		border none
		background-image url('img/select-logo.png')
		background-repeat no-repeat
		background-position 96%
	&__acces
		width 15%
		position relative
		&::before
			content "Период доступа"	
			color #dadfe0
			font-size 11px
			position absolute
			z-index 1
			top 10px
			left 15px		
	&__acces-date
		width 87%
		padding 30px 15px 10px 
		border none			
